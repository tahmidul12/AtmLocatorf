<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_onlinedtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.atm.atmlocator.Onlinedtl"
    tools:showIn="@layout/activity_onlinedtl">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linearv_stv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="0dp"
                android:layout_weight="4.0">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:id="@+id/pb_atm"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/imgv_atm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <fragment
                        class="com.google.android.gms.maps.StreetViewPanoramaFragment"
                        android:layout_width="match_parent"
                        android:id="@+id/mapstreet"
                        android:layout_height="match_parent"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearv_atm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.0"
                android:weightSum="2"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/dtltopbackonline">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:paddingLeft="6dp"
                    android:gravity="bottom"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textv_atmName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="27dp"
                        android:text=""
                        android:textStyle="italic"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/textv_bankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:layout_weight="0.6">
                    <TextView
                        android:id="@+id/textv_floatbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:layout_marginTop="25dp"
                        android:text="show StreetView"/>
                    <ImageView
                        android:id="@+id/imgv_atms"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:src="@mipmap/samplebanklogo"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.0"
                android:weightSum="7"
                android:orientation="vertical"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:paddingTop="9dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/dtlmidbackonline">
                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:text="Address:"
                    android:textSize="14sp"/>-->
                <TextView
                    android:id="@+id/textv_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:textSize="15sp"
                    android:text=""/>
                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:text="City:"
                    android:textSize="14sp"/>-->
                <TextView
                    android:id="@+id/textv_city"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:textSize="15sp"
                    android:text=""/>
                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:drawableLeft="@mipmap/latlnglogo"
                    android:text="State:"
                    android:textSize="14sp"/>-->
                <TextView
                    android:id="@+id/textv_state"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearv_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_alignParentBottom = "true"
                android:layout_weight="1.0">
                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    ads:adSize = "BANNER"
                    ads:adUnitId ="@string/banner_ad_unit_id">
                </com.google.android.gms.ads.AdView>
            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/map_back"
                android:layout_marginTop="5dp"
                android:layout_weight="3.5">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="comment"/>
            </LinearLayout>
            -->
        </LinearLayout>
    </ScrollView>
    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/myFabCurrentLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#ffffff"
        android:tint="@color/colorPrimary"
        android:layout_gravity="right"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_mylocation"
        app:fabSize="mini"
        />-->
</RelativeLayout>
